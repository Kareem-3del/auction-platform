# Production Environment Variables Template
# Copy this to .env.production and update with your actual values

# Database Configuration
DATABASE_URL="postgresql://auction_user:your_secure_password@postgres:5432/auction_platform"
POSTGRES_DB=auction_platform
POSTGRES_USER=auction_user
POSTGRES_PASSWORD=your_secure_password

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# JWT & Auth Configuration
NEXTAUTH_SECRET=your_production_nextauth_secret_key_here
NEXTAUTH_URL=https://yourdomain.com
JWT_SECRET=your_production_jwt_secret_key_here

# App URLs (Replace with your domain)
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXT_PUBLIC_WS_URL=wss://yourdomain.com

# Email Configuration (Optional - for production emails)
EMAIL_FROM=noreply@yourdomain.com
SENDGRID_API_KEY=your_sendgrid_api_key_here

# SSL Certificate Paths (for HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=/etc/ssl/certs/yourdomain.key

# Other Production Settings
NODE_ENV=production
PORT=3000